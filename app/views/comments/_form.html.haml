-# frozen_string_literal: true
= simple_form_for(@comment) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :user
    = f.input :commentable_type, collection: ['Anime','Source','News'], include_blank: false
    = f.input :commentable_id, label: 'Commentable id', hint: 'Input ID as integer'
    = f.input :msg

  .form-actions
    = f.button :submit, class: "btn-primary", style: "margin: 5px 0px;"
