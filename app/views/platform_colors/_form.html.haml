-# frozen_string_literal: true
= simple_form_for(@platform_color) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :platform
    = f.input :color

  .form-actions
    = f.button :submit, class: "btn btn-primary", style:"margin: 5px 0px;"
