%h1 Listing platforms

%table.row-border#platforms_index_table
  %thead
    %tr
      %th Name
      %th Link
      %th Anime
      %th
      %th
      %th

  %tbody
    - @platforms.each do |platform|
      %tr
        %td= platform.name
        %td= link_to platform.link, platform.link
        %td= Anime.find(platform.anime_id).name
        %td= link_to 'Show', platform
        %td= link_to 'Edit', edit_platform_path(platform)
        %td= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Platform', new_platform_path

:javascript
  $(document).ready( function () {
    $('#platforms_index_table').DataTable({
      "ordering": true,
      "order": [[2,'asc']]
    });
  } );